<h3>Fill in an Address</h3>

<%= form_for [@student, @address] do |f| %>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :street_address %><br/>
    <%= f.text_area :street_address %>
  </p>
  <p>
    <%= f.label :city %><br/>
    <%= f.text_area :city %>
  </p>
  <p>
    <%= f.label :state %><br/>
    <%= f.text_area :state %>
  </p>
  <p>
    <%= f.label :zip_code %><br/>
    <%= f.text_area :zip_code %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
